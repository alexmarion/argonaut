{
	"extends": "airbnb-base",
	"rules": {
    "no-plusplus": "off",
    "implicit-arrow-linebreak": "off",
		"keyword-spacing": ["error", {
      "overrides": {
        "if": {"after": false},
        "for": {"after": false},
        "while": {"after": false},
        "switch": {"after": false},
        "catch": {"after": false}
      }
    }]
	}
}
